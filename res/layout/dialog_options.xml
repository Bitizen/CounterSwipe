<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dlOptions" >

    <Button
        android:id="@+id/bReadyOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Ready" />

    <Button
        android:id="@+id/bMarkerOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bReadyOp"
        android:layout_alignBottom="@+id/bReadyOp"
        android:layout_toRightOf="@+id/bReadyOp"
        android:text="Set Marker" />

</RelativeLayout>
